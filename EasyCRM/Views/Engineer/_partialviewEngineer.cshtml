@model EasyCRM.Models.ViewModels.EngineerVM;
@using (Html.BeginForm("SaveEngineers", "Engineer", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(x => x.EngineerId)
        <label> Engineer Name</label>
        <input type="text" asp-for="EngineerName" required />

        <label> Engineer Address</label>
        <input type="text" asp-for="EngineerAddress" required />

        <label> Engineer City</label>
        <input type="text" asp-for="EngineerCity" required />

        <label> Engineer phone</label>
        <input type="text" asp-for="EngineerPhone" required />

        <input type="submit" value="Save" />
    </div>
}