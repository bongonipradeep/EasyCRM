@model EasyCRM.Models.ViewModels.CustomerVM;
@using (Html.BeginForm("SaveCustomer", "Customer", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(x => x.CustomerId)
        <label> Customer Name</label>
        <input type="text" asp-for="CustomerName" required />

        <label> Customer Address</label>
        <input type="text" asp-for="CustomerAddress" required />

        <label> Customer Description</label>
        <input type="text" asp-for="CustomerDescription" required />

        <label> Customer phone</label>
        <input type="text" asp-for="CustomerPhone" required />

        <input type="submit" value="Save" />
    </div>
}