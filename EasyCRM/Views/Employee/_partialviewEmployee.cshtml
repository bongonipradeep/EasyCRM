@model EasyCRM.Models.ViewModels.EmployeeVM;
@using (Html.BeginForm("SaveEmployee", "Employee", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(x => x.EmployeeId)
        <label> Employee Name</label>
        <input type="text" asp-for="EmployeeName" required />

        <label> Employee Address</label>
        <input type="text" asp-for="EmployeeAddress" required />

        <label> Employee City</label>
        <input type="text" asp-for="EmployeeCity" required />

        <label> Employee phone</label>
        <input type="text" asp-for="EmployeePhone" required />

        <input type="submit" value="Save" />
    </div>
}