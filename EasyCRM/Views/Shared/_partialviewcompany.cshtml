@model EasyCRM.Models.ViewModels.CompanyVM;
@using (Html.BeginForm("SaveCompany", "Company", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(x => x.CompanyId)
        <label> Company Name</label>
        <input type="text" asp-for="CompanyName" required />

        <label> Company Address</label>
        <input type="text" asp-for="CompanyAddress" required />

        <label> Company Description</label>
        <input type="text" asp-for="CompanyDescription" required />

        <label> company phone</label>
        <input type="text" asp-for="CompanyPhone" required />

        <input type="submit" value="Save" />
    </div>
}